{
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "ui": {
      "$id": "/properties/ui",
      "type": "object",
      "properties": {
        "state": {
          "$id": "/properties/ui/properties/state",
          "type": "string",
          "title": "State",
          "description": "Describes whether the game is active or paused.",
          "default": "active",
          "examples": [
            "active",
            "paused"
          ],
          "enum": [
            "active",
            "paused"
          ]
        },
        "focus": {
          "$id": "/properties/ui/properties/focus",
          "type": "string",
          "title": "Focus",
          "description": "Describes the current focus.",
          "default": "empty",
          "examples": [
            "empty",
            "peon",
            "stronghold"
          ]
        },
        "time": {
          "$id": "/properties/ui/properties/state",
          "type": "number",
          "title": "Time",
          "description": "Describes the in-game time.",
          "default": 0,
          "examples": [
            0,
            1,
            2
          ]
        }
      },
      "required": [
        "state",
        "focus",
        "time"
      ]
    }
  },
  "required": [
    "ui"
  ]
}